<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda_de_contatos.controller.ConfigController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>

                <Label text="Configurações">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Tema">
                            <content>
                                <VBox spacing="20.0" alignment="TOP_LEFT">
                                    <padding>
                                        <Insets top="20.0" left="10.0" right="10.0" bottom="10.0"/>
                                    </padding>

                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Label text="Cor da Fonte:" minWidth="120"/>
                                        <Button fx:id="btnFontWhite" styleClass="theme-button" onAction="#handleThemeChange" textFill="black" style="-fx-background-color: #FFFFFF;" userData="font:#FFFFFF"/>
                                        <Button fx:id="btnFontBlack" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #333333;" userData="font:#333333"/>
                                        <Button fx:id="btnFontBlue" styleClass="theme-button" onAction="#handleThemeChange" textFill="black" style="-fx-background-color: #ECF0F1;" userData="font:#ECF0F1"/>
                                        <Button fx:id="btnTxtRed" styleClass="theme-button" onAction="#handleThemeChange" textFill="red" style="-fx-background-color: #FF0000;" userData="font:#FF0000"/>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Label text="Cor dos Botões:" minWidth="120"/>
                                        <Button fx:id="btnButtonWhite" styleClass="theme-button" onAction="#handleThemeChange" textFill="black" style="-fx-background-color: #FFFFFF;" userData="button:#FFFFFF"/>
                                        <Button fx:id="btnButtonBlue" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #4A89F3;" userData="button:#4A89F3"/>
                                        <Button fx:id="btnButtonOrange" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #f0ad4e;" userData="button:#f0ad4e"/>
                                        <Button fx:id="btnButtonRed" styleClass="theme-button" onAction="#handleThemeChange" textFill="red" style="-fx-background-color: #FF0000;" userData="button:#FF0000"/>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Label text="Cor de Fundo:" minWidth="120"/>
                                        <Button fx:id="btnBgLight" styleClass="theme-button" onAction="#handleThemeChange" textFill="black" style="-fx-background-color: #F4F4F4;" userData="background:#F4F4F4"/>
                                        <Button fx:id="btnBgDark" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #3C3F41;" userData="background:#3C3F41"/>
                                        <Button fx:id="btnBgBlue" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #2C3E50;" userData="background:#2C3E50"/>
                                        <Button fx:id="btnBgRed" styleClass="theme-button" onAction="#handleThemeChange" textFill="red" style="-fx-background-color: #FF0000;" userData="background:#FF0000"/>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Label text="Cor Barra Lateral:" minWidth="120"/>
                                        <Button fx:id="btnSidebarLight" styleClass="theme-button" onAction="#handleThemeChange" textFill="black" style="-fx-background-color: #F4F4F4;" userData="sidebar:#F4F4F4"/>
                                        <Button fx:id="btnSidebarDark" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #3C3F41;" userData="sidebar:#3C3F41"/>
                                        <Button fx:id="btnSidebarBlue" styleClass="theme-button" onAction="#handleThemeChange" textFill="white" style="-fx-background-color: #2C3E50;" userData="sidebar:#2C3E50"/>
                                        <Button fx:id="btnSidebarRed" styleClass="theme-button" onAction="#handleThemeChange" textFill="red" style="-fx-background-color: #FF0000;" userData="sidebar:#FF0000"/>
                                    </HBox>

                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Armazenamento">
                            <content>
                                <VBox spacing="15.0" alignment="TOP_LEFT">
                                    <padding>
                                        <Insets top="20.0" left="10.0" right="10.0" bottom="10.0"/>
                                    </padding>
                                    <GridPane fx:id="gridPane" hgap="10.0" vgap="15.0" maxWidth="600.0">
                                        <Label text="Modo:" GridPane.rowIndex="0" />
                                        <ChoiceBox fx:id="storageChoiceBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label fx:id="hostLabel" text="MySQL URL:" GridPane.rowIndex="1" />
                                        <TextField fx:id="hostField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label fx:id="userLabel" text="Usuário:" GridPane.rowIndex="2" />
                                        <TextField fx:id="userField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label fx:id="passLabel" text="Senha:" GridPane.rowIndex="3" />
                                        <PasswordField fx:id="passField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    </GridPane>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <children>
                                            <Button fx:id="testButton" onAction="#handleTestar" text="Testar MySQL" />
                                            <Button onAction="#handleSalvarStorage" text="Salvar Armazenamento" />
                                            <Label fx:id="storageStatusLabel" />
                                        </children>
                                        <VBox.margin>
                                            <Insets top="10.0" />
                                        </VBox.margin>
                                    </HBox>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <Label fx:id="configStatusLabel" />
            </children>
        </VBox>
    </children>
</AnchorPane>