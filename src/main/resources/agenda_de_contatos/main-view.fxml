<?xml version="1.0" encoding="UTF-8"?>

<!-- Importações necessárias -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agenda_de_contatos.controller.MainController">

    <left>
        <VBox fx:id="sidebar" prefWidth="250.0" spacing="10.0"
              styleClass="sidebar" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <children>
                <Label styleClass="sidebar-title" text="Meus Contatos"/>

                <!-- Botão CONTATOS -->
                <Button fx:id="btnContatos" alignment="BASELINE_LEFT"
                        graphicTextGap="15.0" mnemonicParsing="false"
                        onAction="#handleShowContatoList" styleClass="sidebar-button"
                        text="Contatos">

                    <graphic>
                        <FontIcon iconLiteral="fas-users" iconSize="20" styleClass="icon"/>
                    </graphic>

                    <tooltip>
                        <Tooltip text="Mostrar lista de contatos"/>
                    </tooltip>
                </Button>

                <!-- Botão ADICIONAR samuel caraiii  -->
                <Button fx:id="btnAdicionar" alignment="BASELINE_LEFT"
                        graphicTextGap="15.0" mnemonicParsing="false"
                        onAction="#handleShowContatoForm" styleClass="sidebar-button"
                        text="Adicionar Novo">

                    <graphic>
                        <FontIcon iconLiteral="fas-user-plus" iconSize="20" styleClass="icon"/>
                    </graphic>

                    <tooltip>
                        <Tooltip text="Adicionar um novo contato"/>
                    </tooltip>
                </Button>

                <!-- Botão CONFIGURAÇÕES  Pablo e o cara -->
                <Button fx:id="btnConfig" alignment="BASELINE_LEFT"
                        graphicTextGap="15.0" mnemonicParsing="false"
                        onAction="#handleShowConfig" styleClass="sidebar-button"
                        text="Configurações">

                    <graphic>
                        <FontIcon iconLiteral="fas-cog" iconSize="20" styleClass="icon"/>
                    </graphic>

                    <tooltip>
                        <Tooltip text="Abrir tela de configurações"/>
                    </tooltip>
                </Button>

                <VBox VBox.vgrow="ALWAYS"/>

                <!-- Botão SAIR -->
                <Button fx:id="btnSair" alignment="BASELINE_LEFT"
                        graphicTextGap="15.0" mnemonicParsing="false"
                        onAction="#handleSair" styleClass="sidebar-button"
                        text="Sair">

                    <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20" styleClass="icon"/>
                    </graphic>

                    <tooltip>
                        <Tooltip text="Encerrar o aplicativo"/>
                    </tooltip>
                </Button>

            </children>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentPane"
                    styleClass="content-pane"
                    BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </AnchorPane>
    </center>

</BorderPane>
